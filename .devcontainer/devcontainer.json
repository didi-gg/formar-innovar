{
    "name": "ficc-project",
    "image": "ficc-project",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "mounts": [
        "source=vscode-extensions,target=/root/.vscode-server/extensions,type=volume",
        "source=vscode-extensions-data,target=/root/.vscode-server/data,type=volume"
    ],
    "runArgs": [
        "--name",
        "ficc-project",
        "--init"
    ],
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-vscode.remote-explorer",
                "anysphere.remote-containers",
                "eamodio.gitlens",
                "donjayamanne.githistory",
                "arturock.gitstash",
                "alefragnani.bookmarks",
                "aaron-bond.better-comments",
                "gruntfuggly.todo-tree",
                "wayou.vscode-todo-highlight",
                "streetsidesoftware.code-spell-checker",
                "streetsidesoftware.code-spell-checker-spanish",
                "mechatroner.rainbow-csv",
                "grapecity.gc-excelviewer",
                "redhat.vscode-yaml",
                "shd101wyy.markdown-preview-enhanced",
                "tomoki1207.pdf",
                "ms-azuretools.vscode-docker",
                "ibm.output-colorizer",
                "naumovs.color-highlight",
                "jinsihou.diff-tool",
                "sensourceinc.vscode-sql-beautify"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "python.analysis.typeCheckingMode": "basic",
                "jupyter.askForKernelRestart": false,
                "files.associations": {
                    "*.csv": "csv",
                    "*.md": "markdown"
                },
                "csv-preview.separator": ",",
                "csv-preview.hasHeaders": true,
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                }
            }
        }
    },
    "postCreateCommand": "echo 'FICC Project Container Ready!'",
    "remoteEnv": {
        "PYTHONPATH": "/workspaces/${localWorkspaceFolderBasename}",
        "H2O_PYTHON_LOG_LEVEL": "INFO",
        "JAVA_OPTS": "-Xmx8g -Xms2g"
    }
}
